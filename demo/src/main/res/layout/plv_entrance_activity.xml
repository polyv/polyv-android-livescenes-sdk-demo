<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PLVEntranceActivity">

    <com.easefun.polyv.livecommon.ui.widget.PLVAlignTopFillWidthImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/plv_entrance_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/plv_entrance_live_streamer_btn"
            style="@style/plv_entrance_button_style"
            android:background="@drawable/plv_entrance_streamer_bg"
            android:onClick="onClick"
            android:text="手机开播" />

        <Button
            android:id="@+id/plv_entrance_live_cloudclass_btn"
            style="@style/plv_entrance_button_style"
            android:layout_marginTop="-16dp"
            android:background="@drawable/plv_entrance_live_bg"
            android:onClick="onClick"
            android:text="云直播观看" />

        <Button
            android:id="@+id/plv_entrance_hi_class_btn"
            style="@style/plv_entrance_button_style"
            android:layout_marginTop="-16dp"
            android:background="@drawable/plv_entrance_hi_class_bg"
            android:onClick="onClick"
            android:text="互动学堂" />

    </LinearLayout>
</RelativeLayout>
