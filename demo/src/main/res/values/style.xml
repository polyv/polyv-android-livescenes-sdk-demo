<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="plv_entrance_button_style">
        <item name="android:layout_width">244dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/plv_white</item>
        <item name="android:paddingTop">36dp</item>
        <item name="android:paddingLeft">36dp</item>
        <item name="android:paddingStart">36dp</item>
        <item name="android:gravity">start|top</item>
    </style>

    <style name="plv_login_edit_text_style">
        <item name="backgroundTint">@color/plv_dodgerBlue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/place_holder_color</item>
    </style>

    <style name="plv_login_switch_style" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="trackTint">@drawable/plv_login_radio_button_color</item>
        <item name="thumbTint">#F2F2F2</item>
    </style>
</resources>