<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="19dp"
    android:paddingRight="19dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/plvhc_login_area_code_locate_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="23dp"
        android:paddingBottom="23dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/plvhc_login_area_locate_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="国家地区"
            android:textColor="#333333"
            android:textSize="16sp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/plvhc_login_area_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="+00"
            android:textColor="#999999"
            android:textSize="16sp"
            android:layout_marginRight="21dp"
            android:layout_marginEnd="21dp" />

    </LinearLayout>

    <View
        android:id="@+id/plvhc_login_area_code_separate_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D8D8D8"
        app:layout_constraintTop_toBottomOf="@id/plvhc_login_area_code_locate_ll" />

</android.support.constraint.ConstraintLayout>