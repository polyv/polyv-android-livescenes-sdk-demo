    <declare-styleable name="PLVRangeSeekBar">
        <!--PLVRangeSeekBar common attrs-->

        <!--The maximum-->
        <attr name="plv_rsb_max" format="float"/>

        <!--The minimum-->
        <attr name="plv_rsb_min" format="float"/>

        <!--PLVRangeSeekBar mode, single is normal seekBar, range is PLVRangeSeekBar-->
        <attr name="plv_rsb_mode" format="enum">
            <enum name="single" value="1"/>
            <enum name="range" value="2"/>
        </attr>

        <!--PLVRangeSeekBar gravity-->
        <attr name="plv_rsb_gravity" format="enum">
            <enum name="top" value="0"/>
            <enum name="bottom" value="1"/>
            <enum name="center" value="2"/>
        </attr>

        <!--The min interval of the thumbs -->
        <attr name="plv_rsb_min_interval" format="float"/>

        <!-- 0 for the normal mode, greater than 1 to switch to scale mode-->
        <attr name="plv_rsb_tick_mark_number" format="integer"/>

        <!--Scale mode
        Number according to the scale of the actual proportion of the distribution of the location (markTextArray must be a number)
        Other bisects the current layout (markTextArray can be any character)
        -->
        <attr name="plv_rsb_tick_mark_mode" format="enum">
            <enum name="number" value="0"/>
            <enum name="other" value="1"/>
        </attr>

        <!--The tick mark text gravity -->
        <attr name="plv_rsb_tick_mark_gravity" format="enum">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>

        <!--The tick mark text layout gravity -->
        <attr name="plv_rsb_tick_mark_layout_gravity" format="enum">
            <enum name="top" value="0"/>
            <enum name="bottom" value="1"/>
        </attr>

        <!--The tick mark text array -->
        <attr name="plv_rsb_tick_mark_text_array" format="reference"/>

        <!--The tick mark text margin bottom to progress -->
        <attr name="plv_rsb_tick_mark_text_margin" format="dimension" />

        <attr name="plv_rsb_tick_mark_text_size" format="dimension" />

        <attr name="plv_rsb_tick_mark_text_color" format="color" />

        <!--it just work in range && number mode now-->
        <attr name="plv_rsb_tick_mark_in_range_text_color" format="color" />

        <attr name="plv_rsb_progress_height" format="dimension"/>

        <attr name="plv_rsb_progress_radius" format="dimension"/>

        <!--the color of progress bar when in progress-->
        <attr name="plv_rsb_progress_color" format="color"/>
        <!--the default color of the progress bar-->
        <attr name="plv_rsb_progress_default_color" format="color"/>

        <attr name="plv_rsb_progress_drawable" format="reference"/>

        <attr name="plv_rsb_progress_drawable_default" format="reference"/>

        <attr name="plv_rsb_mid_side_drawable_mode" format="boolean"/>

        <!--SeekBar attrs-->
        <attr name="plv_rsb_indicator_show_mode" format="enum">
            <enum name="showWhenTouch" value="0"/>
            <enum name="alwaysHide" value="1"/>
            <enum name="alwaysShowAfterTouch" value="2"/>
            <enum name="alwaysShow" value="3"/>
        </attr>
        <attr name="plv_rsb_indicator_height" format="dimension" >
            <enum name="wrap_content" value="-1" />
        </attr>
        <attr name="plv_rsb_indicator_width" format="dimension" >
            <enum name="wrap_content" value="-1" />
        </attr>
        <!--indicator margin bottom to progress bar-->
        <attr name="plv_rsb_indicator_margin" format="dimension" />
        <attr name="plv_rsb_indicator_text_size" format="dimension" />
        <attr name="plv_rsb_indicator_text_color" format="color" />
        <!--indicator arrow size, it just work when you not use rsb_indicator_drawable -->
        <attr name="plv_rsb_indicator_arrow_size" format="dimension" />
        <!-- must use 9 path ！！！-->
        <attr name="plv_rsb_indicator_drawable" format="reference"/>
        <attr name="plv_rsb_indicator_background_color" format="color" />
        <attr name="plv_rsb_indicator_padding_left" format="dimension" />
        <attr name="plv_rsb_indicator_padding_right" format="dimension" />
        <attr name="plv_rsb_indicator_padding_top" format="dimension" />
        <attr name="plv_rsb_indicator_padding_bottom" format="dimension" />
        <attr name="plv_rsb_indicator_radius" format="dimension" />
        <attr name="plv_rsb_thumb_drawable" format="reference"/>
        <!--the thumb inactivated is when you don't touch the thumb button-->
        <attr name="plv_rsb_thumb_inactivated_drawable" format="reference"/>
        <attr name="plv_rsb_thumb_width" format="dimension"/>
        <attr name="plv_rsb_thumb_height" format="dimension"/>
        <attr name="plv_rsb_thumb_scale_ratio" format="float"/>

        <!--steps PLVSeekBar-->
        <attr name="plv_rsb_steps" format="integer"/>
        <attr name="plv_rsb_step_color" format="color"/>
        <attr name="plv_rsb_step_width" format="dimension"/>
        <attr name="plv_rsb_step_height" format="dimension"/>
        <attr name="plv_rsb_step_radius" format="dimension"/>
        <attr name="plv_rsb_step_auto_bonding" format="boolean"/>
        <attr name="plv_rsb_step_drawable" format="reference"/>

    </declare-styleable>

