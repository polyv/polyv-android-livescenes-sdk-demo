<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--沉浸式主题-->
    <style name="AppTheme.StatusTranslate" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="AppTheme.Translate" parent="AppTheme.StatusTranslate">
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowAllowReturnTransitionOverlap" tools:targetApi="lollipop">false
        </item>
        <item name="android:windowAllowEnterTransitionOverlap" tools:targetApi="lollipop">false
        </item>
    </style>

    <style name="AppTheme.Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <!--need fitsSystemWindows-->
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="plv_style_reward_radio_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:background">@drawable/plv_selecotr_point_reward_point_to_send_selector
        </item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:textColor">@drawable/plv_selector_text_point_reward_point_to_send</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="plv_buttom_popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/plv_cast_push_bottom_in</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/plv_cast_push_bottom_out</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="plv_right_popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/plv_cast_push_right_in</item>
        <item name="android:windowExitAnimation">@anim/plv_cast_push_right_out</item>
    </style>

    <style name="Widget" />

    <!-- Base theme for the menu drawer. -->
    <style name="Widget.MenuDrawer">
        <item name="plv_mdMenuBackground">@color/plv_md__defaultBackground</item>
        <item name="plv_mdContentBackground">?android:attr/windowBackground</item>
        <item name="plv_mdDrawerOpenUpContentDescription">Close drawer</item>
        <item name="plv_mdDrawerClosedUpContentDescription">Open drawer</item>
    </style>
</resources>