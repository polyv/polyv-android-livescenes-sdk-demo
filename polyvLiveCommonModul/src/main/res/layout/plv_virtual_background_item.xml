<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:background="#000000">

    <LinearLayout
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/plv_setting_virtual_bg_bg"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:padding="2dp">

            <com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundImageView
                android:id="@+id/plv_virtual_bg_primary_iv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/plv_setting_cancel"
                app:plv_radius_iv="8dp" />

            <ImageView
                android:id="@+id/plv_virtual_bg_cancel_iv"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="right"
                android:padding="4dp"
                android:src="@drawable/plv_setting_close"
                android:translationX="10dp"
                android:translationY="-10dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/plv_setting_virtual_bg_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/plv_live_nothing"
            android:textColor="#F0F1F5"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>
</FrameLayout>