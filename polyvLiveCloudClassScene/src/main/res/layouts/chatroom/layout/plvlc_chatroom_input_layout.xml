<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="56dp"
    android:background="#1A1B1F"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp">

    <com.easefun.polyv.businesssdk.sub.gif.GifEditText
        android:id="@+id/input_et"
        android:layout_width="0dp"
        android:layout_marginRight="8dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:background="@drawable/plvlc_et_chat_corner"
        android:hint="我也来聊几句"
        android:imeOptions="actionSend|flagNoFullscreen"
        android:maxLength="200"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:singleLine="true"
        android:textColor="#ADADC0"
        android:textColorHint="#494A56"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/right_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/toggle_emoji_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:src="@drawable/plvlc_chatroom_btn_emoji_toggle" />

        <ImageView
            android:id="@+id/toggle_more_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:clickable="true"
            android:src="@drawable/plvlc_chatroom_btn_more_toggle"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>
</LinearLayout>