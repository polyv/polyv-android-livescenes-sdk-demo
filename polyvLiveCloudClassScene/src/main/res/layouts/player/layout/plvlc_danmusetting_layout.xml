<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/plvlc_danmu_container_ly"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#000000">

        <android.support.constraint.ConstraintLayout
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="66dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/plvlc_danmu_setting_speed_titke_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plv_danmu_speed"
                android:textSize="14sp"
                android:textColor="#C2C2C2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.easefun.polyv.livecommon.ui.widget.seekbar.PLVRangeSeekBar
                android:id="@+id/plvlc_danmu_setting_speed_sb"
                android:layout_width="236dp"
                android:layout_height="44dp"
                android:layout_marginTop="14dp"
                app:rsb_gravity="center"
                app:layout_constraintTop_toTopOf="@+id/plvlc_danmu_setting_speed_titke_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:rsb_mode="single"
                app:rsb_progress_color="#00000000"
                app:rsb_progress_default_color="#666666"
                app:rsb_step_auto_bonding="true"
                app:rsb_step_color="#FFFFFF"
                app:rsb_step_height="4dp"
                app:rsb_step_radius="5dp"
                app:rsb_step_width="4dp"
                app:rsb_steps="4"
                app:rsb_thumb_drawable="@drawable/plv_beauty_seek_bar_thumb"
                app:rsb_thumb_height="14dp"
                app:rsb_thumb_scale_ratio="1.25"
                app:rsb_thumb_width="14dp"
                app:rsb_mid_side_drawable_mode="true"/>

            <TextView
                android:id="@+id/plvlc_danmu_setting_speed_dsc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/plvlc_danmu_setting_speed_sb"
                app:layout_constraintTop_toBottomOf="@+id/plvlc_danmu_setting_speed_titke_tv"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:minEms="5"
                android:text="@string/plv_danmu_speed_slower"
                android:textSize="14sp"
                android:textColor="#C2C2C2"/>

        </android.support.constraint.ConstraintLayout>


    </FrameLayout>




</FrameLayout>