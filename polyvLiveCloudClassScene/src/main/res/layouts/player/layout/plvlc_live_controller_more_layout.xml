<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/container_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000">

        <com.easefun.polyv.livecommon.ui.widget.PLVOrientationSensibleLinearLayout
            android:id="@+id/ll_more_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/plvlc_live_control_more_mode_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/plvlc_live_control_more_mode_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|right"
                    android:text="模式"
                    android:textColor="#C2C2C2"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/plvlc_live_control_more_mode_switch_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_play_video_switch"
                        android:layout_width="80dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/plvlc_controller_tv_blue_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/plv_player_video_play_mode"
                        android:textColor="@color/plvlc_controller_tv_blue_fg_selector"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_only_audio_switch"
                        android:layout_width="80dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/plvlc_controller_tv_blue_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/plv_player_audio_play_mode"
                        android:textColor="@color/plvlc_controller_tv_blue_fg_selector"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/plvlc_live_control_more_bitrate_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/plvlc_live_control_more_bitrate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:text="清晰度"
                    android:textColor="#C2C2C2"
                    android:textSize="12sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/plvlc_live_control_more_bitrate_rv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/plvlc_live_control_more_lines_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/plvlc_live_control_more_lines_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:text="线路"
                    android:textColor="#C2C2C2"
                    android:textSize="12sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/plvlc_live_control_more_lines_rv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/plvlc_live_control_more_latency_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/plvlc_live_control_more_latency_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:text="延迟"
                    android:textColor="#C2C2C2"
                    android:textSize="12sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/plvlc_live_control_more_latency_rv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </com.easefun.polyv.livecommon.ui.widget.PLVOrientationSensibleLinearLayout>
    </FrameLayout>
</FrameLayout>