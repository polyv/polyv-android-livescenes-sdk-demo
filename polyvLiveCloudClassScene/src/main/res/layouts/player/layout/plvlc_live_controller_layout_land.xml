<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/video_controller_land_ly"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/gradient_bar_land_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@drawable/plvlc_controller_video_top_landscape_gradient" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="bottom"
            android:scaleType="fitXY"
            android:src="@drawable/plvlc_controller_video_bottom_landscape_gradient" />
    </FrameLayout>

    <com.easefun.polyv.livecloudclass.modules.media.widget.PLVLCPPTTurnPageLayout
        android:id="@+id/video_ppt_turn_page_land_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="68dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/video_name_land_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/back_land_iv"
        android:layout_alignBottom="@+id/back_land_iv"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/back_land_iv"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxEms="12"
        android:minWidth="20dp"
        android:singleLine="true"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/video_viewer_count_land_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/video_name_land_tv"
        android:layout_alignBottom="@+id/video_name_land_tv"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/video_name_land_tv"
        android:gravity="center_vertical"
        android:text="2.3w次播放"
        android:textColor="#D0D0D0"
        android:textSize="12sp"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/back_land_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:src="@drawable/plvlc_controller_back" />

    <LinearLayout
        android:id="@+id/bottom_bar_land_ly"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="14dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/video_pause_land_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="14dp"
            android:padding="8dp"
            android:src="@drawable/plvlc_controller_play_and_pause_selector" />

        <ImageView
            android:id="@+id/video_refresh_land_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="14dp"
            android:padding="8dp"
            android:src="@drawable/plvlc_controller_refresh_video" />

        <ImageView
            android:id="@+id/video_ppt_switch_land_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="14dp"
            android:padding="8dp"
            android:src="@drawable/plvlc_controller_ppt_sub_selector" />

        <ImageView
            android:id="@+id/danmu_switch_land_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="14dp"
            android:padding="8dp"
            android:src="@drawable/plvlc_controller_chatroom_switch_selector"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/plvlc_live_control_floating_land_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="14dp"
            android:padding="8dp"
            android:src="@drawable/plvlc_live_controller_floating_icon" />

        <ImageView
            android:id="@+id/bulletin_land_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="14dp"
            android:padding="8dp"
            android:src="@drawable/plvlc_controller_btn_bulletin" />

        <ImageView
            android:id="@+id/more_land_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="14dp"
            android:padding="8dp"
            android:src="@drawable/plvlc_controller_more" />
    </LinearLayout>

    <com.easefun.polyv.livecloudclass.modules.chatroom.widget.PLVLCLikeIconView
        android:id="@+id/likes_land_iv"
        android:layout_width="62dp"
        android:layout_height="180dp"
        android:layout_alignBottom="@id/start_send_message_land_tv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:visibility="invisible"
        app:src_wh="36dp"
        tools:visibility="visible" />

    <View
        android:id="@+id/plvlc_refer_view_1"
        android:layout_width="60dp"
        android:layout_height="1dp"
        android:layout_alignBottom="@id/start_send_message_land_tv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:visibility="invisible"
        tools:visibility="visible" />

    <com.easefun.polyv.livecommon.ui.widget.imageview.PLVSimpleImageView
        android:id="@+id/plvlc_iv_show_point_reward"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@id/start_send_message_land_tv"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/plvlc_refer_view_1"
        android:src="@drawable/plvlc_iv_show_point_reward"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.easefun.polyv.livecommon.ui.widget.imageview.PLVSimpleImageView
        android:id="@+id/plvlc_controller_commodity_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/start_send_message_land_tv"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/plvlc_iv_show_point_reward"
        android:src="@drawable/plvlc_controller_commodity_icon" />

    <com.easefun.polyv.livecommon.ui.widget.imageview.PLVSimpleImageView
        android:id="@+id/plvlc_card_enter_view"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@id/start_send_message_land_tv"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/plvlc_controller_commodity_iv"
        android:src="@drawable/plv_interact_redpack_gain"
        android:visibility="gone"
        tools:visibility="visible" />

    <View
        android:id="@+id/plvlc_refer_view_2"
        android:layout_width="56dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@id/start_send_message_land_tv"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/plvlc_controller_commodity_iv"
        android:visibility="invisible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/plvlc_card_enter_cd_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plvlc_card_enter_view"
        android:layout_alignLeft="@+id/plvlc_refer_view_2"
        android:layout_alignRight="@+id/plvlc_refer_view_2"
        android:gravity="center"
        android:text="00:00:00"
        android:textColor="#ADADC0"
        android:textSize="10sp"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.easefun.polyv.livecommon.ui.widget.PLVTriangleIndicateTextView
        android:id="@+id/plvlc_card_enter_tips_view"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_above="@+id/plvlc_card_enter_view"
        android:layout_alignRight="@+id/plvlc_card_enter_view"
        android:layout_marginBottom="4dp"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:text="连续观看有奖励哦"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:visibility="gone"
        app:indicateColor="#FF9D4D"
        app:indicateEndColor="#F65F49"
        app:rectRadius="4dp"
        app:triangleCenter="true"
        app:triangleHeight="6dp"
        app:trianglePosition="bottom"
        app:triangleWidth="10dp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/start_send_message_land_tv"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignTop="@id/bottom_bar_land_ly"
        android:layout_marginStart="32dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="38dp"
        android:layout_toStartOf="@id/plvlc_card_enter_view"
        android:layout_toEndOf="@id/bottom_bar_land_ly"
        android:background="@drawable/plvlc_message_btn_send_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:imeOptions="flagNoFullscreen|flagNoExtractUi"
        android:singleLine="true"
        android:text="跟大家聊点什么吧~"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />
</RelativeLayout>