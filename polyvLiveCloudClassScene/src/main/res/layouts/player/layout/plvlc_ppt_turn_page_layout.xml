<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:parentTag="android.widget.RelativeLayout">

    <com.easefun.polyv.livecommon.ui.widget.PLVTriangleIndicateTextView
        android:layout_centerHorizontal="true"
        android:id="@+id/plvlc_ppt_turn_page_tip_tv"
        app:indicateColor="@color/white"
        app:rectRadius="5dp"
        app:triangleHeight="6dp"
        app:trianglePosition="bottom"
        app:triangleMarginType="left"
        app:triangleMargin="55dp"
        app:triangleWidth="10dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="点击回到当前页"
        android:visibility="invisible"
        android:textColor="#000" />

    <LinearLayout
        android:layout_below="@id/plvlc_ppt_turn_page_tip_tv"
        android:id="@+id/plvlc_ppt_turn_page_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/plvlc_bg_player_controller_ppt_turn_page"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:layout_centerHorizontal="true"
        android:paddingEnd="8dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/plvlc_ppt_turn_page_previous_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/plvlc_controller_ppt_previous_selector"/>

        <TextView
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/plvlc_ppt_turn_page_progress_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="0/0"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/plvlc_ppt_turn_page_next_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/plvlc_controller_ppt_next_selector" />

    </LinearLayout>




</merge>