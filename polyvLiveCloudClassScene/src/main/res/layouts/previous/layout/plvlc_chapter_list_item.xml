<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chapter_item"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/plvlc_chapter_item_status_im"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/plvlc_chapter_play_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    
    <TextView
        android:id="@+id/plvlc_chapter_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:textSize="14sp"
        android:textColor="@color/colorSpunPearl"
        android:text="1.1投资管理"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="21dp"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@+id/plvlc_chapter_item_status_im"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <TextView
        android:id="@+id/plvlc_chapter_item_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="00:00:00"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/colorSpunPearl"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</android.support.constraint.ConstraintLayout>