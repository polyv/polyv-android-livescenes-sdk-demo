<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/plvlc_live_subtitle_setting_language_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1D2129"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="语言" />

    <ImageView
        android:id="@+id/plvlc_live_subtitle_setting_language_selected_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/plvlc_live_subtitle_setting_language_selected_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>