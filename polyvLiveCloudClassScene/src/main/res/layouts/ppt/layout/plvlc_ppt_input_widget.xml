<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c8000000"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/plvlc_ppt_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#1A1B1F"
        android:paddingLeft="50dp"
        android:paddingTop="5dp"
        android:paddingRight="50dp"
        android:paddingBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/plvlc_ppt_input_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plv_common_dialog_cancel"
            android:textColor="#999999"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/plvlc_ppt_input_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:text="@string/plv_common_dialog_confirm_2"
            android:textColor="#999999"
            android:textSize="16sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/input_content"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:imeOptions="flagNoExtractUi"
        android:maxLength="100"
        android:paddingLeft="86dp"
        android:paddingRight="86dp"
        android:scrollbars="vertical"
        android:textColor="#FF5B5B"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plvlc_ppt_input_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>