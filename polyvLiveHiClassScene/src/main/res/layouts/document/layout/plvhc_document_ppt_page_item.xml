<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="98dp"
    android:layout_height="48dp"
    android:layout_marginBottom="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundRectLayout
        android:id="@+id/plvhc_document_ppt_item_round_layout"
        android:layout_width="78dp"
        android:layout_height="44dp"
        app:radius="4dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/plvhc_document_ppt_item_iv"
            android:layout_width="144dp"
            android:layout_height="80dp"
            tools:src="@drawable/plvhc_memeber_list_empty"
            tools:background="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/plvhc_document_ppt_index_tv"
            android:layout_width="24dp"
            android:layout_height="16dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center"
            tools:text="1"
            android:background="@drawable/plvhc_document_ppt_lt_radius_solid_rect_selector"
            android:layout_alignBottom="@id/plvhc_document_ppt_item_iv"
            android:layout_alignRight="@id/plvhc_document_ppt_item_iv"
            android:layout_alignEnd="@id/plvhc_document_ppt_item_iv" />

    </com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundRectLayout>

    <View
        android:id="@+id/plvhc_document_ppt_selected_mask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/plvhc_document_ppt_radius_rect"
        tools:visibility="visible"
        android:layout_marginLeft="-2dp"
        android:layout_marginRight="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_marginBottom="-2dp"
        android:layout_alignTop="@id/plvhc_document_ppt_item_round_layout"
        android:layout_alignBottom="@id/plvhc_document_ppt_item_round_layout"
        android:layout_alignLeft="@id/plvhc_document_ppt_item_round_layout"
        android:layout_alignRight="@id/plvhc_document_ppt_item_round_layout"
        android:layout_alignStart="@id/plvhc_document_ppt_item_round_layout"
        android:layout_alignEnd="@id/plvhc_document_ppt_item_round_layout" />

</RelativeLayout>