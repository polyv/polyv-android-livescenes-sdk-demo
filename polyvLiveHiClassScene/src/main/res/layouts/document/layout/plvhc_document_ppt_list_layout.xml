<?xml version="1.0" encoding="utf-8"?>
<com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundRectLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:mode="all"
    app:radius="16dp"
    android:background="#20273C">

    <LinearLayout
        android:id="@+id/plvhc_document_title_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="#2D3452"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/plvhc_document_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="所有文档"
            android:textColor="#F0F1F5"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/plvhc_document_page_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="test"
            android:gravity="end"
            android:layout_gravity="center"
            android:textColor="#CFD1D6"
            android:textSize="12sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/plvhc_document_ppt_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@drawable/plvhc_document_popuplist_scrollbar_thumb"
        android:scrollbarSize="2dp"
        android:scrollbarStyle="insideOverlay"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@id/plvhc_document_title_ll"
        android:layout_alignParentBottom="true" />

    <com.easefun.polyv.livecommon.ui.widget.PLVGradientView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:plvGradientColors="#FF23273C, #0023273C"
        app:plvGradientOrientation="bottomTop"
        android:layout_alignParentBottom="true" />

</com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundRectLayout>