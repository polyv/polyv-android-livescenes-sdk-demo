<?xml version="1.0" encoding="utf-8"?>
<com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundRectLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:radius="8dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:background="#2D3452">

    <LinearLayout
        android:id="@+id/plvhc_document_minimize_group_item_ll"
        android:layout_width="298dp"
        android:layout_height="32dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/plvhc_document_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="111"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:singleLine="true"
            android:ellipsize="middle"
            android:layout_weight="1"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/plvhc_document_close_iv"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/plvhc_document_close"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

</com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundRectLayout>