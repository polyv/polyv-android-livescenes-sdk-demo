<?xml version="1.0" encoding="utf-8"?>
<com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundRectLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:radius="22dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:background="#661B202D">

    <LinearLayout
        android:id="@+id/plvhc_toolbar_mark_tool_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundImageView
            android:id="@+id/plvhc_toolbar_mark_tool_move_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/plvhc_document_move_icon"
            android:background="@drawable/plvhc_document_mark_tool_icon_bg"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp" />

        <com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundImageView
            android:id="@+id/plvhc_toolbar_mark_tool_select_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/plvhc_document_select_icon"
            android:background="@drawable/plvhc_document_mark_tool_icon_bg"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp" />

        <com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundImageView
            android:id="@+id/plvhc_toolbar_mark_tool_pen_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/plvhc_document_pen_icon"
            android:background="@drawable/plvhc_document_mark_tool_icon_bg"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp" />

        <com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundImageView
            android:id="@+id/plvhc_toolbar_mark_tool_arrow_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/plvhc_document_arrow_icon"
            android:background="@drawable/plvhc_document_mark_tool_icon_bg"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp" />

        <com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundImageView
            android:id="@+id/plvhc_toolbar_mark_tool_text_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/plvhc_document_text_icon"
            android:background="@drawable/plvhc_document_mark_tool_icon_bg"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp" />

        <com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundImageView
            android:id="@+id/plvhc_toolbar_mark_tool_eraser_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/plvhc_document_eraser_icon"
            android:background="@drawable/plvhc_document_mark_tool_icon_bg"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp" />

        <com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundImageView
            android:id="@+id/plvhc_toolbar_mark_tool_clear_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/plvhc_document_clear_icon"
            android:background="@drawable/plvhc_document_mark_tool_icon_bg"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/plvhc_toolbar_mark_tool_color_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="gone">

        <com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundColorView
            android:id="@+id/plvhc_toolbar_mark_tool_color_red_view"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:plvMainColor="#FF6363"
            app:plvMainRadius="6dp"
            app:plvBackgroundColor="#2D3452"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp" />

        <com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundColorView
            android:id="@+id/plvhc_toolbar_mark_tool_color_blue_view"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:plvMainColor="#4399FF"
            app:plvMainRadius="6dp"
            app:plvBackgroundColor="#2D3452"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp" />

        <com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundColorView
            android:id="@+id/plvhc_toolbar_mark_tool_color_green_view"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:plvMainColor="#5AE59C"
            app:plvMainRadius="6dp"
            app:plvBackgroundColor="#2D3452"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp" />

        <com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundColorView
            android:id="@+id/plvhc_toolbar_mark_tool_color_yellow_view"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:plvMainColor="#FFE45B"
            app:plvMainRadius="6dp"
            app:plvBackgroundColor="#2D3452"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp" />

        <com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundColorView
            android:id="@+id/plvhc_toolbar_mark_tool_color_black_view"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:plvMainColor="#4A5060"
            app:plvMainRadius="6dp"
            app:plvBackgroundColor="#2D3452"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp" />

        <com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundColorView
            android:id="@+id/plvhc_toolbar_mark_tool_color_white_view"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:plvMainColor="#F0F1F5"
            app:plvMainRadius="6dp"
            app:plvBackgroundColor="#2D3452"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp" />

    </LinearLayout>

</com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundRectLayout>