<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="bottom"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/plvhc_toolbar_student_mark_tool_control_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/plvhc_toolbar_student_mark_undo_iv"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/plvhc_document_mark_tool_undo_selector" />

            <ImageView
                android:id="@+id/plvhc_toolbar_student_mark_delete_iv"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/plvhc_document_mark_tool_delete_icon"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp" />

            <com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundColorView
                android:id="@+id/plvhc_toolbar_student_mark_tool_current_color_view"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:plvMainColor="#FF6363"
                app:plvMainRadius="6dp"
                app:plvBackgroundColor="#E6242940"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp" />

            <RelativeLayout
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp">

                <com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundImageView
                    android:id="@+id/plvhc_toolbar_student_current_mark_tool_iv"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/plvhc_document_select_icon"
                    app:radius_iv="18dp"
                    android:background="#E6242940" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:src="@drawable/plvhc_document_mark_tool_more_icon"
                    android:tint="#F0F1F5"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="24dp">

        <FrameLayout
            android:id="@+id/plvhc_toolbar_student_hands_up_ly"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:visibility="invisible"
            tools:visibility="visible"
            android:layout_marginBottom="14dp">

            <ImageView
                android:id="@+id/plvhc_toolbar_student_hands_up_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/plvhc_toolbar_hands_up_selector" />

            <TextView
                android:id="@+id/plvhc_toolbar_student_hands_up_cd_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/plvhc_toolbar_hands_up_bg_shape"
                android:gravity="center"
                android:text="5s"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/plvhc_toolbar_student_chatroom_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp">

            <ImageView
                android:id="@+id/plvhc_toolbar_student_chatroom_iv"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/plvhc_toolbar_chatroom_view_selector" />

            <!--聊天室其他用户发言的提示-->
            <View
                android:id="@+id/plvhc_toolbar_student_chatroom_msg_tips_view"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="right"
                android:background="@drawable/plvhc_toolbar_chatroom_msg_tip_view_bg_shape"
                android:visibility="gone" />
        </FrameLayout>

        <ImageView
            android:id="@+id/plvhc_toolbar_student_setting_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/plvhc_toolbar_setting_view_selector" />

    </LinearLayout>

</LinearLayout>