<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:src="@drawable/plvhc_live_room_exit" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/plvhc_live_room_exit_view_layer">

            <TextView
                android:id="@+id/plvhc_live_room_exit_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:text="课程还未结束，确定离开教室吗？"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/plvhc_live_room_cancel_tv"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:layout_below="@+id/plvhc_live_room_exit_content_tv"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/plvhc_live_room_exit_cancel_tv_shape"
                android:gravity="center"
                android:text="按错了"
                android:textColor="#00B16C"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/plvhc_live_room_confirm_tv"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:layout_below="@+id/plvhc_live_room_exit_content_tv"
                android:layout_alignParentRight="true"
                android:layout_marginTop="21dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/plvhc_live_room_exit_confirm_tv_shape"
                android:gravity="center"
                android:text="确定"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>