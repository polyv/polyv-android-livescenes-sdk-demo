<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundRectLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:radius="16dp"
        android:background="#2B2F48"
        android:layout_marginBottom="77dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/plvhc_live_room_teacher_count_down_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="72sp"
            android:layout_marginTop="14dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秒后开始上课"
            android:textColor="@color/white"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:layout_below="@id/plvhc_live_room_teacher_count_down_time_tv" />

    </com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundRectLayout>

</RelativeLayout>