<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/copy_answer_parent_ly"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:background="@drawable/plv_cp_ly_corner_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/long_press_copy_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="复制"
            android:textColor="#F0F1F5"
            android:visibility="visible" />

        <View
            android:id="@+id/split_view"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="#2FCCCCCC"
            android:visibility="visible" />

        <TextView
            android:id="@+id/long_press_answer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="回复"
            android:textColor="#F0F1F5" />
    </LinearLayout>

    <View
        android:id="@+id/inverted_triangle_view"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_gravity="center"
        android:background="@drawable/plv_inverted_triangle_layer_list" />
</LinearLayout>