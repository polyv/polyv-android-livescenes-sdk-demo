<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#80000000">

    <com.plv.livecommon.ui.widget.PLVActionEditText
        android:id="@+id/plvsa_live_room_setting_title_input_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="直播标题直播标题直播标题直播标题直播标题直播标题直播标题直播标题直播标题直播标题直播标题直播标题直播标题直播标题直播标题直播标题直播标题直播标题"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:hint="点击输入直播标题"
        android:textColorHint="#99FFFFFF"
        android:imeOptions="actionDone|flagNoFullscreen|flagNoExtractUi"
        android:maxLength="50"
        android:background="@null"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/plvsa_live_room_setting_title_length_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#B3FFFFFF"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/plvsa_live_room_setting_title_input_et"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>