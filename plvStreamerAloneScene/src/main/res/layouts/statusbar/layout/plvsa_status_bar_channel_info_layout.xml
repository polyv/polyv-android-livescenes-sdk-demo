<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/plvsa_channel_info_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/plvsa_status_bar_channel_info_ly_shape"
    android:paddingTop="32dp"
    android:paddingBottom="32dp">

    <TextView
        android:id="@+id/plvsa_channel_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="频道信息"
        android:textColor="#F0F1F5"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/plvsa_channel_info_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/plvsa_channel_info_tv"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">

        <LinearLayout
            android:id="@+id/plvsa_channel_info_name_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/plvsa_channel_info_name_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="直播名称："
                android:textColor="#99F0F1F5"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/plvsa_channel_info_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:lineSpacingExtra="4dp"
                android:textColor="#F0F1F5"
                android:textSize="14sp"
                tools:text="一二三四五六七八九零一二三四五六七八九零一二三四五六七八九零一二三四五六七八九零一二三四五六七八九零" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/plvsa_channel_info_start_time_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/plvsa_channel_info_start_time_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="开始时间："
                android:textColor="#99F0F1F5"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/plvsa_channel_info_start_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="#F0F1F5"
                android:textSize="14sp"
                tools:text="00:00:00" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/plvsa_channel_info_id_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/plvsa_channel_info_id_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="频道号："
                android:textColor="#99F0F1F5"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/plvsa_channel_info_id_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#F0F1F5"
                    android:textSize="14sp"
                    tools:text="123456" />

                <Button
                    android:id="@+id/plvsa_channel_info_id_copy_btn"
                    android:layout_width="50dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/plvsa_status_bar_channel_info_copy_btn_bg"
                    android:text="复制"
                    android:textColor="#FFF"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>