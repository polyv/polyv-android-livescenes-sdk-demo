<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.plv.streameralone">

    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <application>
        <activity
            android:name="com.plv.streameralone.scenes.PLVSAStreamerAloneActivity"
            android:configChanges="orientation|keyboard|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name="com.plv.streameralone.modules.chatroom.widget.PLVSAChatMsgInputWindow"
            android:configChanges="orientation|keyboard|screenSize"
            android:screenOrientation="behind"
            android:theme="@style/AppTheme.Translucent" />

        <service android:name="com.plv.streameralone.modules.streamer.service.PLVSAForegroundService" />
    </application>
</manifest>