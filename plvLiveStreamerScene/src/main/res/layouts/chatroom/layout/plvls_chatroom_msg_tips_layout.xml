<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/plvls_oriented_view"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/plvls_chatroom_msg_tips_view_bg_layer" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/plvls_chatroom_msg_tips_view_bg_shape"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/plvls_chatroom_tips_msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="违规词"
            android:textColor="#F0F1F5"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>