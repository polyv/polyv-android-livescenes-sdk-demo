<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="32dp"
    android:paddingBottom="32dp"
    android:layout_gravity="bottom"
    android:background="@drawable/plvsa_status_bar_channel_info_ly_shape">

    <TextView
        android:id="@+id/plvsa_channel_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:text="频道信息"
        android:textColor="#F0F1F5"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/plvsa_channel_info_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="22dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:layout_below="@id/plvsa_channel_info_tv">

        <LinearLayout
            android:id="@+id/plvsa_channel_info_name_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/plvsa_channel_info_name_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直播名称："
                android:textSize="14sp"
                android:textColor="#99F0F1F5" />

            <TextView
                android:id="@+id/plvsa_channel_info_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="一二三四五六七八九零一二三四五六七八九零一二三四五六七八九零一二三四五六七八九零一二三四五六七八九零"
                android:textSize="14sp"
                android:textColor="#F0F1F5"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/plvsa_channel_info_start_time_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/plvsa_channel_info_start_time_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始时间："
                android:textSize="14sp"
                android:textColor="#99F0F1F5" />

            <TextView
                android:id="@+id/plvsa_channel_info_start_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="00:00:00"
                android:textSize="14sp"
                android:textColor="#F0F1F5" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/plvsa_channel_info_id_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp">

            <TextView
                android:id="@+id/plvsa_channel_info_id_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="频道号："
                android:textSize="14sp"
                android:textColor="#99F0F1F5"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/plvsa_channel_info_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="123456"
                android:textSize="14sp"
                android:textColor="#F0F1F5"
                android:layout_gravity="center_vertical" />

            <Button
                android:id="@+id/plvsa_channel_info_id_copy_btn"
                android:layout_width="50dp"
                android:layout_height="24dp"
                android:text="复制"
                android:textSize="12dp"
                android:textColor="#FFF"
                android:background="@drawable/plvsa_status_bar_channel_info_copy_btn_bg"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>