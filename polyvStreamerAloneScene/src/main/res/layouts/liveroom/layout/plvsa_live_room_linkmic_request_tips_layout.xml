<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.easefun.polyv.livecommon.ui.widget.PLVTriangleIndicateLayout
        android:id="@+id/plvsa_empty_linkmic_tips_group_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="5dp"
        app:plv_indicateColor="#80232323"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:plv_rectRadius="16dp"
        app:plv_triangleHeight="6dp"
        app:plv_triangleWidth="11dp"
        app:plv_trianglePosition="top"
        app:plv_triangleMarginType="center">

        <LinearLayout
            android:id="@+id/plvsa_empty_linkmic_tips_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:paddingVertical="4dp">

            <ImageView
                android:id="@+id/plvsa_empty_linkmic_tips_icon_iv"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/plvsa_empty_fragment_linkmic_tips_icon" />

            <TextView
                android:id="@+id/plvsa_empty_linkmic_tips_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:text="@string/plv_linkmic_empty_linkmic_tips"
                android:textColor="#F0F1F5"
                android:textSize="14sp" />

            <Button
                android:id="@+id/plvsa_empty_linkmic_nav_btn"
                android:layout_width="50dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:background="@drawable/plvsa_status_bar_channel_info_copy_btn_bg"
                android:text="@string/plv_live_view"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="12sp" />

        </LinearLayout>

    </com.easefun.polyv.livecommon.ui.widget.PLVTriangleIndicateLayout>

</android.support.constraint.ConstraintLayout>