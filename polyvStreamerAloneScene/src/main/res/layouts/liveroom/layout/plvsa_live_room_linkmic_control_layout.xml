<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:background="@drawable/plvsa_linkmic_control_view_bg_shape"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <TextView
            android:id="@+id/plvsa_linkmic_video_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp"
            android:text="视频连麦"
            android:textColor="#F0F1F5"
            android:textSize="14sp" />

        <View
            android:id="@+id/plvsa_linkmic_control_split_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#4D1B202D" />

        <TextView
            android:id="@+id/plvsa_linkmic_audio_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="8dp"
            android:text="音频连麦"
            android:textColor="#F0F1F5"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_gravity="center"
        android:background="@drawable/plvsa_linkmic_control_view_bg_layer" />

</LinearLayout>