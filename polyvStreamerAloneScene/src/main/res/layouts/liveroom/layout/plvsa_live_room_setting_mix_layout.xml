<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/plvsa_setting_mix_layout_root"
    android:layout_width="match_parent"
    android:layout_height="462dp"
    android:layout_gravity="bottom"
    android:background="@drawable/plvsa_setting_bitrate_ly_shape">

    <TextView
        android:id="@+id/plvsa_setting_mix_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="@string/plv_streamer_mix_layout"
        android:textColor="#F0F1F5"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/plvsa_setting_mix_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:text="@string/plv_streamer_mix_description"
        android:textColor="#99FFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plvsa_setting_mix_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plvsa_setting_mix_desc">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.easefun.polyv.livecommon.module.modules.streamer.view.ui.PLVStreamerPreferenceCardView
                android:id="@+id/plvsa_setting_mix_speaker_card"
                android:layout_width="158dp"
                android:layout_height="52dp"
                android:layout_marginStart="12dp"
                app:layout_constraintEnd_toStartOf="@+id/plvsa_setting_mix_tile_card"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:plv_check_icon_height="16dp"
                app:plv_check_icon_width="14dp"
                app:plv_radius="4dp">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/plv_streamer_mix_speaker_sample"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/plv_streamer_mix_speaker_title"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/plv_streamer_mix_speaker_description"
                        android:textColor="#99FFFFFF"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>

            </com.easefun.polyv.livecommon.module.modules.streamer.view.ui.PLVStreamerPreferenceCardView>

            <com.easefun.polyv.livecommon.module.modules.streamer.view.ui.PLVStreamerPreferenceCardView
                android:id="@+id/plvsa_setting_mix_tile_card"
                android:layout_width="158dp"
                android:layout_height="52dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/plvsa_setting_mix_speaker_card"
                app:layout_constraintTop_toTopOf="parent"
                app:plv_check_icon_height="16dp"
                app:plv_check_icon_width="14dp"
                app:plv_radius="4dp">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/plv_streamer_mix_tile_sample"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/plv_streamer_mix_tile_title"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/plv_streamer_mix_tile_description"
                        android:textColor="#99FFFFFF"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>

            </com.easefun.polyv.livecommon.module.modules.streamer.view.ui.PLVStreamerPreferenceCardView>

            <com.easefun.polyv.livecommon.module.modules.streamer.view.ui.PLVStreamerPreferenceCardView
                android:id="@+id/plvsa_setting_mix_single_card"
                android:layout_width="158dp"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@+id/plvsa_setting_mix_speaker_card"
                app:layout_constraintTop_toBottomOf="@+id/plvsa_setting_mix_speaker_card"
                app:plv_check_icon_height="16dp"
                app:plv_check_icon_width="14dp"
                app:plv_radius="4dp">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/plv_streamer_mix_single_sample"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/plv_streamer_mix_single_title"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/plv_streamer_mix_single_description"
                        android:textColor="#99FFFFFF"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>

            </com.easefun.polyv.livecommon.module.modules.streamer.view.ui.PLVStreamerPreferenceCardView>

            <com.easefun.polyv.livecommon.module.modules.streamer.view.ui.PLVStreamerPreferenceCardView
                android:id="@+id/plvsa_setting_mix_list_right_card"
                android:layout_width="158dp"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@+id/plvsa_setting_mix_tile_card"
                app:layout_constraintTop_toBottomOf="@+id/plvsa_setting_mix_tile_card"
                app:plv_check_icon_height="16dp"
                app:plv_check_icon_width="14dp"
                app:plv_radius="4dp">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/plv_streamer_mix_list_right_sample"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/plv_streamer_mix_list_right_title"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/plv_streamer_mix_list_right_description"
                        android:textColor="#99FFFFFF"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>

            </com.easefun.polyv.livecommon.module.modules.streamer.view.ui.PLVStreamerPreferenceCardView>

            <com.easefun.polyv.livecommon.module.modules.streamer.view.ui.PLVStreamerPreferenceCardView
                android:id="@+id/plvsa_setting_mix_list_bottom_card"
                android:layout_width="158dp"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@+id/plvsa_setting_mix_single_card"
                app:layout_constraintTop_toBottomOf="@+id/plvsa_setting_mix_single_card"
                app:plv_check_icon_height="16dp"
                app:plv_check_icon_width="14dp"
                app:plv_radius="4dp">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/plv_streamer_mix_list_bottom_sample"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/plv_streamer_mix_list_bottom_title"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/plv_streamer_mix_list_bottom_description"
                        android:textColor="#99FFFFFF"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>

            </com.easefun.polyv.livecommon.module.modules.streamer.view.ui.PLVStreamerPreferenceCardView>

            <TextView
                android:id="@+id/plvsa_setting_mix_background_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:text="@string/plv_streamer_mix_background_setting"
                android:textColor="#99FFFFFF"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/plvsa_setting_mix_list_bottom_card" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/plvsa_setting_mix_background_title">

                <LinearLayout
                    android:id="@+id/plvsa_setting_mix_background_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:showDividers="middle"
                    android:divider="@drawable/plv_linear_layout_divider_space_8dp"
                    android:orientation="horizontal" />

            </HorizontalScrollView>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>