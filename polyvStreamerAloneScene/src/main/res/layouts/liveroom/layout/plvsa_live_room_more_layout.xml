<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/plvsa_more_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/plvsa_more_ly_shape"
    android:paddingLeft="25dp"
    android:paddingTop="32dp"
    android:paddingRight="25dp">

    <TextView
        android:id="@+id/plvsa_more_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更多"
        android:textColor="#FFF0F1F5"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/plvsa_more_settings_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plvsa_more_text_tv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:id="@+id/plvsa_more_settings_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:clipChildren="false"
                android:columnCount="5"
                android:paddingBottom="24dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="6dp"
                    android:gravity="center|top"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/plvsa_more_camera_iv"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:padding="12dp"
                        android:src="@drawable/plvsa_more_camera_selector" />

                    <TextView
                        android:id="@+id/plvsa_more_camera_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|top"
                        android:text="摄像头"
                        android:textColor="#99F0F1F5"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="6dp"
                    android:gravity="center|top"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/plvsa_more_mic_iv"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:padding="12dp"
                        android:src="@drawable/plvsa_more_mic_selector" />

                    <TextView
                        android:id="@+id/plvsa_more_mic_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|top"
                        android:text="麦克风"
                        android:textColor="#99F0F1F5"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="6dp"
                    android:gravity="center|top"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/plvsa_more_camera_switch_iv"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:padding="12dp"
                        android:src="@drawable/plvsa_more_camera_switch_selector" />

                    <TextView
                        android:id="@+id/plvsa_more_camera_switch_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|top"
                        android:text="翻转"
                        android:textColor="#99F0F1F5"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="6dp"
                    android:gravity="center|top"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/plvsa_more_mirror_iv"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:padding="12dp"
                        android:src="@drawable/plvsa_more_mirror_selector" />

                    <TextView
                        android:id="@+id/plvsa_more_mirror_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|top"
                        android:text="镜像"
                        android:textColor="#99F0F1F5"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/plvsa_more_beauty_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="6dp"
                    android:gravity="center|top"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:padding="12dp"
                        android:src="@drawable/plvsa_more_beauty_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|top"
                        android:text="@string/plvsa_beauty_title"
                        android:textColor="#99F0F1F5"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/plvsa_more_share_screen_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="6dp"
                    android:gravity="center|top"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/plvsa_more_share_screen_iv"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:padding="10dp"
                        android:src="@drawable/plvsa_streamer_share_screen_selector" />

                    <TextView
                        android:id="@+id/plvsa_more_share_screen_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|top"
                        android:text="屏幕共享"
                        android:textColor="#99F0F1F5"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="6dp"
                    android:gravity="center|top"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/plvsa_more_bitrate_iv"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:padding="12dp"
                        android:src="@drawable/plvsa_bitrate_icon_hd" />

                    <TextView
                        android:id="@+id/plvsa_more_bitrate_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|top"
                        android:text="高清"
                        android:textColor="#99F0F1F5"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="6dp"
                    android:gravity="center|top"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/plvsa_more_flashlight_iv"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:padding="12dp"
                        android:src="@drawable/plvsa_more_flashlight_selector" />

                    <TextView
                        android:id="@+id/plvsa_more_flashlight_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|top"
                        android:text="闪光灯"
                        android:textColor="#99F0F1F5"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/plvsa_more_close_room_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="6dp"
                    android:clipChildren="false"
                    android:gravity="center|top"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/plvsa_more_close_room_iv"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:padding="12dp"
                        android:src="@drawable/plvsa_more_close_room_selector" />

                    <FrameLayout
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:clipChildren="false">

                        <TextView
                            android:id="@+id/plvsa_more_close_room_tv"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="center|top"
                            android:letterSpacing="-0.12"
                            android:text="开启全体禁言"
                            android:textColor="#99F0F1F5"
                            android:textSize="12sp"
                            android:translationX="-12dp" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/plvsa_more_share_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="6dp"
                    android:gravity="center|top"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/plvsa_more_share_iv"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:padding="12dp"
                        android:src="@drawable/plvsa_more_share" />

                    <TextView
                        android:id="@+id/plvsa_more_share_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|top"
                        android:text="分享"
                        android:textColor="#99F0F1F5"
                        android:textSize="12sp" />

                </LinearLayout>
            </GridLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>