<?xml version="1.0" encoding="utf-8"?>
<com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundRectConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/plvsa_streamer_media_overlay_audio_setting_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2c2c2c"
    app:plv_mode="top"
    app:plv_radius="16dp"
    tools:layout_gravity="bottom"
    tools:layout_height="240dp">

    <TextView
        android:id="@+id/plvsa_streamer_media_overlay_audio_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/plvsa_streamer_media_overlay_audio_setting_title"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/plvsa_streamer_media_overlay_remote_volume_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:maxWidth="80dp"
        android:text="@string/plvsa_streamer_media_overlay_remote_volume_title"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plvsa_streamer_media_overlay_audio_setting_title" />

    <TextView
        android:id="@+id/plvsa_streamer_media_overlay_remote_volume_tv"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:gravity="end"
        android:text="100%"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/plvsa_streamer_media_overlay_remote_volume_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/plvsa_streamer_media_overlay_remote_volume_title" />

    <com.easefun.polyv.streameralone.modules.streamer.overlay.PLVSAStreamerMediaOverlayRemoteVolumeSeekBar
        android:id="@+id/plvsa_streamer_media_overlay_remote_volume_seek_bar"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="16dp"
        android:max="100"
        android:maxHeight="4dp"
        android:minHeight="4dp"
        android:paddingHorizontal="7dp"
        android:progressDrawable="@drawable/plvsa_streamer_media_overlay_progress_seek_bar_style_normal"
        android:thumb="@drawable/plvsa_streamer_media_overlay_audio_seekbar_thumb"
        app:layout_constraintBottom_toBottomOf="@+id/plvsa_streamer_media_overlay_remote_volume_title"
        app:layout_constraintEnd_toStartOf="@+id/plvsa_streamer_media_overlay_remote_volume_tv"
        app:layout_constraintStart_toEndOf="@+id/plvsa_streamer_media_overlay_remote_volume_title"
        app:layout_constraintTop_toTopOf="@+id/plvsa_streamer_media_overlay_remote_volume_title" />

    <TextView
        android:id="@+id/plvsa_streamer_media_overlay_local_volume_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:maxWidth="80dp"
        android:text="@string/plvsa_streamer_media_overlay_local_volume_title"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plvsa_streamer_media_overlay_remote_volume_title" />

    <TextView
        android:id="@+id/plvsa_streamer_media_overlay_local_volume_tv"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:gravity="end"
        android:text="100%"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/plvsa_streamer_media_overlay_local_volume_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/plvsa_streamer_media_overlay_local_volume_title" />

    <com.easefun.polyv.streameralone.modules.streamer.overlay.PLVSAStreamerMediaOverlayLocalVolumeSeekBar
        android:id="@+id/plvsa_streamer_media_overlay_local_volume_seek_bar"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="16dp"
        android:max="100"
        android:maxHeight="4dp"
        android:minHeight="4dp"
        android:paddingHorizontal="7dp"
        android:progressDrawable="@drawable/plvsa_streamer_media_overlay_progress_seek_bar_style_normal"
        android:thumb="@drawable/plvsa_streamer_media_overlay_audio_seekbar_thumb"
        app:layout_constraintBottom_toBottomOf="@+id/plvsa_streamer_media_overlay_local_volume_title"
        app:layout_constraintEnd_toStartOf="@+id/plvsa_streamer_media_overlay_local_volume_tv"
        app:layout_constraintStart_toEndOf="@+id/plvsa_streamer_media_overlay_local_volume_title"
        app:layout_constraintTop_toTopOf="@+id/plvsa_streamer_media_overlay_local_volume_title" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/plvsa_streamer_media_overlay_default_mute_local_hint"
        android:textColor="#66FFFFFF"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plvsa_streamer_media_overlay_local_volume_title" />

</com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundRectConstraintLayout>