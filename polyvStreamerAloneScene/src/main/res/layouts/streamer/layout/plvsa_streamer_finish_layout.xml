<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2c2c2c">

    <ImageView
        android:id="@+id/plvsa_streamer_finish_iv"
        android:layout_width="100dp"
        android:layout_height="84dp"
        android:src="@drawable/plvsa_streamer_finish_icon"
        android:layout_marginTop="69dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/plvsa_streamer_finish_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="直播已结束"
        android:textSize="24sp"
        android:textColor="#F0F1F5"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/plvsa_streamer_finish_iv"
        app:layout_constraintLeft_toLeftOf="@id/plvsa_streamer_finish_iv"
        app:layout_constraintRight_toRightOf="@id/plvsa_streamer_finish_iv" />

    <View
        android:id="@+id/plvsa_streamer_finish_split_view"
        android:layout_width="2dp"
        android:layout_height="52dp"
        android:background="#33FFFFFF"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/plvsa_streamer_finish_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/plvsa_streamer_finish_start_end_time_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="直播时间"
        android:textSize="14sp"
        android:textColor="#CCF0F1F5"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintBottom_toBottomOf="@id/plvsa_streamer_finish_split_view"
        app:layout_constraintRight_toLeftOf="@id/plvsa_streamer_finish_split_view"
        app:layout_constraintEnd_toStartOf="@id/plvsa_streamer_finish_split_view" />

    <TextView
        android:id="@+id/plvsa_streamer_finish_start_end_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00～00:00"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#CCF0F1F5"
        android:maxEms="8"
        android:singleLine="true"
        app:layout_constraintTop_toTopOf="@id/plvsa_streamer_finish_split_view"
        app:layout_constraintLeft_toLeftOf="@id/plvsa_streamer_finish_start_end_time_label_tv"
        app:layout_constraintRight_toRightOf="@id/plvsa_streamer_finish_start_end_time_label_tv" />

    <TextView
        android:id="@+id/plvsa_streamer_finish_stream_time_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="直播时长"
        android:textSize="14sp"
        android:textColor="#CCF0F1F5"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        app:layout_constraintBottom_toBottomOf="@id/plvsa_streamer_finish_split_view"
        app:layout_constraintLeft_toRightOf="@id/plvsa_streamer_finish_split_view"
        app:layout_constraintStart_toEndOf="@id/plvsa_streamer_finish_split_view" />

    <TextView
        android:id="@+id/plvsa_streamer_finish_stream_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#CCF0F1F5"
        android:maxEms="8"
        android:singleLine="true"
        app:layout_constraintTop_toTopOf="@id/plvsa_streamer_finish_split_view"
        app:layout_constraintLeft_toLeftOf="@id/plvsa_streamer_finish_stream_time_label_tv"
        app:layout_constraintRight_toRightOf="@id/plvsa_streamer_finish_stream_time_label_tv" />

    <Button
        android:id="@+id/plvsa_streamer_finish_close_btn"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="确定"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:background="@drawable/plvsa_streamer_finish_close_btn_bg"
        android:layout_marginBottom="119dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>