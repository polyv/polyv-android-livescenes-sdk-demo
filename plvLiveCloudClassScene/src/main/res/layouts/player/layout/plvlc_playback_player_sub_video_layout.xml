<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 子播放器，用于播放广告及暖场 -->
    <com.plv.business.api.auxiliary.PLVAuxiliaryVideoview
        android:id="@+id/sub_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <!-- 子播放器的控制栏 -->
        <LinearLayout
            android:id="@+id/plv_auxiliary_controller_ll_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/plvlc_ad_bg"
            android:paddingLeft="12dp"
            android:paddingTop="7dp"
            android:paddingRight="12dp"
            android:paddingBottom="7dp">

            <TextView
                android:id="@+id/auxiliary_tv_count_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </com.plv.business.api.auxiliary.PLVAuxiliaryVideoview>
</FrameLayout>