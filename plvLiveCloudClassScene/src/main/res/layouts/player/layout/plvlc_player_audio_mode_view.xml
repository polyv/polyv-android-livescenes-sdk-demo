<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/colorEbonyClay"
    tools:parentTag="android.support.constraint.ConstraintLayout">

    <ImageView
        android:id="@+id/plvlc_iv_audio_mode_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/plvlc_bg_player_audio_mode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1.27:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.48" />

    <TextView
        android:id="@+id/plvlc_tv_placeholder_audio_mode_play_video"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:background="@drawable/plvlc_bg_player_audio_mode_play_video_btn"
        android:gravity="center"
        android:text="播放画面"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/plvlc_iv_audio_mode_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    </TextView>
</merge>