<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/container_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000">

        <com.plv.livecommon.ui.widget.PLVOrientationSensibleLinearLayout
            android:id="@+id/ll_more_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/landscape_speed_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical|left"
                android:text="倍速"
                android:textColor="#C2C2C2"
                android:textSize="12sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/fl_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/portrait_speed_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|right"
                    android:text="倍速"
                    android:textColor="#C2C2C2"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_more_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="1dp"></android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </com.plv.livecommon.ui.widget.PLVOrientationSensibleLinearLayout>
    </FrameLayout>
</FrameLayout>