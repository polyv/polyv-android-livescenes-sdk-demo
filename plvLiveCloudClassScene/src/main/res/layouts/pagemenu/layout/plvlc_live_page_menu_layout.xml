<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.plv.livecommon.ui.widget.magicindicator.PLVMagicIndicator
        android:id="@+id/chatroom_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        tools:background="#3E3E4E" />

    <View
        android:id="@+id/split_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.plv.livecommon.ui.widget.PLVSimpleViewPager
        android:id="@+id/chatroom_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>