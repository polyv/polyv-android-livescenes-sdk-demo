<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="343dp"
    android:layout_height="72dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/plvlc_previous_item_cover_Im"
        android:layout_width="127dp"
        android:layout_height="72dp"
        android:scaleType="fitXY"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/plvlc_previous_item_title_tv"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textSize="14sp"
        android:ellipsize="end"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="2dp"
        android:text="11111111"
        android:textColor="@color/colorSpunPearl"
        app:layout_constraintLeft_toRightOf="@+id/plvlc_previous_item_cover_Im"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <TextView
        android:id="@+id/plvlc_previous_item_startTime_tv"
        android:layout_width="161dp"
        android:layout_height="17dp"
        android:textColor="@color/colorSoftDodgerBlue"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:text="开始时间：2020-12-12 12:30"
        app:layout_constraintLeft_toLeftOf="@+id/plvlc_previous_item_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/plvlc_previous_item_title_tv"/>

    <TextView
        android:id="@+id/plvlc_previous_item_duration_tv"
        android:layout_width="49dp"
        android:layout_height="17dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:text="00:00:00"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/plvlc_previous_item_mask"
        android:layout_width="82dp"
        android:layout_height="32dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/plvlc_shape_previous_playbacking_mask"
        android:text="播放中"
        android:gravity="center"
        android:drawableLeft="@drawable/plvlc_previous_playbacking_icon"
        android:paddingLeft="10dp"
        android:drawablePadding="-10dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="22dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>