<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="62dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/plvec_red_pack_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/plvec_live_red_pack_password_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.easefun.polyv.livecommon.ui.widget.PLVRoundRectGradientTextView
        android:id="@+id/plvec_red_pack_count_down_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:paddingHorizontal="6dp"
        android:paddingVertical="1dp"
        android:text="00:00"
        android:textColor="#CCFFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/plvec_red_pack_iv"
        app:layout_constraintStart_toStartOf="@id/plvec_red_pack_iv"
        app:layout_constraintTop_toBottomOf="@id/plvec_red_pack_iv"
        app:plvGradientColors="#CC202127"
        app:plvRadius="8dp" />

</android.support.constraint.ConstraintLayout>