<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundRectConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#262523"
        app:layout_constraintBottom_toBottomOf="parent"
        app:mode="top"
        app:radius="6dp">

        <TextView
            android:id="@+id/plvec_linkmic_invitation_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:text="邀请你视频连麦"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundRectConstraintLayout
            android:id="@+id/plvec_linkmic_invitation_camera_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/plvec_linkmic_invitation_camera_iv"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintTop_toBottomOf="@+id/plvec_linkmic_invitation_title_tv">

            <TextureView
                android:id="@+id/plvec_linkmic_invitation_camera_preview_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="H,9:16"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/plvec_linkmic_invitation_camera_closed_hint_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#353535"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/plvec_linkmic_invitation_camera_closed_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已关摄像头"
                        android:textColor="#70FFFFFF"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/plvec_linkmic_invitation_only_audio_hint_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E1EEFF"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/plvec_linkmic_invitation_only_audio_hint_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundRectConstraintLayout>

        <ImageView
            android:id="@+id/plvec_linkmic_invitation_camera_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/plvec_linkmic_invitation_camera_icon"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/plvec_linkmic_invitation_microphone_iv"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/plvec_linkmic_invitation_camera_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:text="摄像头"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/plvec_linkmic_invitation_camera_iv"
            app:layout_constraintStart_toEndOf="@+id/plvec_linkmic_invitation_camera_iv"
            app:layout_constraintTop_toTopOf="@+id/plvec_linkmic_invitation_camera_iv"
            tools:visibility="visible" />

        <Switch
            android:id="@+id/plvec_linkmic_invitation_camera_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="31dp"
            android:thumb="@drawable/plvec_linkmic_invitation_switch_thumb"
            android:track="@drawable/plvec_linkmic_invitation_switch_track"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/plvec_linkmic_invitation_camera_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/plvec_linkmic_invitation_camera_tv"
            tools:checked="true"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/plvec_linkmic_invitation_microphone_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/plvec_linkmic_invitation_microphone_icon"
            app:layout_constraintBottom_toTopOf="@+id/plvec_linkmic_invitation_privacy_notify_iv"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/plvec_linkmic_invitation_microphone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:text="麦克风"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/plvec_linkmic_invitation_microphone_iv"
            app:layout_constraintStart_toEndOf="@+id/plvec_linkmic_invitation_microphone_iv"
            app:layout_constraintTop_toTopOf="@+id/plvec_linkmic_invitation_microphone_iv" />

        <Switch
            android:id="@+id/plvec_linkmic_invitation_microphone_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="31dp"
            android:thumb="@drawable/plvec_linkmic_invitation_switch_thumb"
            android:track="@drawable/plvec_linkmic_invitation_switch_track"
            app:layout_constraintBottom_toBottomOf="@+id/plvec_linkmic_invitation_microphone_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/plvec_linkmic_invitation_microphone_tv" />

        <ImageView
            android:id="@+id/plvec_linkmic_invitation_privacy_notify_iv"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="26dp"
            android:src="@drawable/plvec_linkmic_invitation_privacy_notify_icon"
            app:layout_constraintBottom_toTopOf="@+id/plvec_linkmic_invitation_cancel_tv"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/plvec_linkmic_invitation_privacy_notify_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="连麦将收集人像信息，确认上麦视为同意"
            android:textColor="#99ffffff"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/plvec_linkmic_invitation_privacy_notify_iv"
            app:layout_constraintStart_toEndOf="@+id/plvec_linkmic_invitation_privacy_notify_iv"
            app:layout_constraintTop_toTopOf="@+id/plvec_linkmic_invitation_privacy_notify_iv" />

        <TextView
            android:id="@+id/plvec_linkmic_invitation_cancel_tv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="34dp"
            android:background="@drawable/plvec_linkmic_invitation_cancel_bg"
            android:gravity="center"
            android:textColor="#FFA611"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/plvec_linkmic_invitation_accept_tv"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="暂不连麦(30s)" />

        <com.easefun.polyv.livecommon.ui.widget.PLVRoundRectGradientTextView
            android:id="@+id/plvec_linkmic_invitation_accept_tv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="34dp"
            android:gravity="center"
            android:text="开始连麦"
            android:textColor="#FFF"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/plvec_linkmic_invitation_cancel_tv"
            app:plvGradientColors="#FFA611"
            app:plvRadius="1000dp" />

    </com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundRectConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>