<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/plvec_previosu_background_radius_layout"
        layout="@layout/plvec_widget_blur_top_radius_layout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.easefun.polyv.livecommon.ui.widget.magicindicator.PLVMagicIndicator
        android:id="@+id/plvec_playback_videos_tab"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="54dp"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="@+id/plvec_previosu_background_radius_layout" />

    <com.easefun.polyv.livecommon.ui.widget.PLVSimpleViewPager
        android:id="@+id/plvec_playback_videos_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/plvec_playback_videos_tab"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/plvec_playback_more_dialog_close_iv"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/plvec_popup_close"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="366dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>




</android.support.constraint.ConstraintLayout>