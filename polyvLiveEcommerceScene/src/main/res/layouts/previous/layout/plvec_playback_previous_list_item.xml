<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="164dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.easefun.polyv.livecommon.ui.widget.roundview.PLVRoundImageView
        android:id="@+id/plvec_previous_item_im"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        app:radius_iv="10dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/plvec_previous_item_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:text="00:00:00"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/plvec_previous_item_im"
        app:layout_constraintLeft_toLeftOf="@+id/plvec_previous_item_im"/>
    
    <TextView
        android:id="@+id/plvec_previous_item_title_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="14sp"
        android:textColor="@color/plvec_playback_item_title_color"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="1111111111111111"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/plvec_previous_item_im"/>

    <TextView
        android:id="@+id/plvec_playback_item_mask"
        android:layout_width="88dp"
        android:layout_height="32dp"
        android:text="播放中"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/plvec_shape_previous_playbacking_mask"
        android:drawableLeft="@drawable/plvec_playbacking_mask_icon"
        android:textColor="#FFFFFF"
        android:paddingLeft="10dp"
        android:visibility="gone"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="38dp"
        app:layout_constraintTop_toTopOf="@+id/plvec_previous_item_im"
        app:layout_constraintLeft_toLeftOf="@+id/plvec_previous_item_im"/>



</android.support.constraint.ConstraintLayout>