<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/plv_colorEbonyClay">

    <com.easefun.polyv.livecommon.ui.widget.PLVRoundRectGradientTextView
        android:id="@+id/plvec_live_player_network_not_good_tips_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="40dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="7dp"
        android:text="@string/plv_player_network_bad_2"
        android:textColor="#333333"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:plvGradientColors="#FFFFFF"
        app:plvRadius="14dp" />

    <com.easefun.polyv.livecommon.ui.widget.PLVTriangleIndicateLayout
        android:id="@+id/plvec_live_player_network_change_latency_tips_layout"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="40dp"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:plv_rectRadius="8dp"
        app:plv_triangleHeight="4dp"
        app:plv_triangleMargin="20dp"
        app:plv_triangleMarginType="right"
        app:plv_trianglePosition="bottom"
        app:plv_triangleWidth="8dp"
        tools:layout_marginBottom="120dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/plvec_live_player_network_change_latency_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:textColor="#333333"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/plvec_live_player_network_close_bad_tips_iv"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="您的网络状态糟糕，可尝试在 更多>模式 切换到正常延迟" />

            <ImageView
                android:id="@+id/plvec_live_player_network_close_bad_tips_iv"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/plvec_live_player_network_close_icon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </com.easefun.polyv.livecommon.ui.widget.PLVTriangleIndicateLayout>

</android.support.constraint.ConstraintLayout>