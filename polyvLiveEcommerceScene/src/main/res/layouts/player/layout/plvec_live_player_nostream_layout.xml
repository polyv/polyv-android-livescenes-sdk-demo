<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/parent_ly"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_gravity="center"
        android:background="#00021A"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nostream_iv"
            android:layout_width="150dp"
            android:layout_height="116dp"
            android:src="@drawable/plvec_nolive" />

        <TextView
            android:id="@+id/nostream_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="暂无直播"
            android:textColor="#e4e4e4"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/plv_change_lines_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:background="@drawable/plv_player_change_lines_tv_shape"
                android:gravity="center"
                android:minEms="5"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="切换线路"
                android:textColor="#E4E4E4"
                android:textSize="12sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/plv_refresh_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/plv_player_refresh_tv_shape"
                android:gravity="center"
                android:minEms="5"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="刷新"
                android:textColor="#E4E4E4"
                android:textSize="12sp"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>