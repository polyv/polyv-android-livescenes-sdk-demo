<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <include
        layout="@layout/plvec_widget_blur_top_radius_layout"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:id="@+id/more_ly"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:paddingTop="42dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="72dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/play_mode_iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/plvec_play_mode_sel" />

            <TextView
                android:id="@+id/play_mode_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="音频模式"
                android:textColor="#CDCDCD"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:minWidth="72dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/change_lines_iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/plvec_route" />

            <TextView
                android:id="@+id/change_route_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="线路"
                android:textColor="#CDCDCD"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="center"
            android:minWidth="72dp"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/change_definition_iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/plvec_definition" />

            <TextView
                android:id="@+id/change_definition_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="清晰度"
                android:textColor="#CDCDCD"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/more_ly"
        android:layout_marginRight="6dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/plvec_popup_close" />
</RelativeLayout>