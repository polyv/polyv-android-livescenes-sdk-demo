<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/plvec_widget_blur_top_radius_layout"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:id="@+id/more_ly"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/plvec_margin_common"
        android:paddingTop="20dp"
        android:paddingRight="@dimen/plvec_margin_common">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换线路"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/change_lines_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/change_lines_tv_1"
                android:layout_width="66dp"
                android:layout_height="26dp"
                android:background="@drawable/plvec_route_corner_bg_sel"
                android:gravity="center"
                android:text="线路1"
                android:textColor="@color/plvec_route_fg"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/change_lines_tv_2"
                android:layout_width="66dp"
                android:layout_height="26dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/plvec_route_corner_bg_sel"
                android:gravity="center"
                android:text="线路2"
                android:textColor="@color/plvec_route_fg"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/change_lines_tv_3"
                android:layout_width="66dp"
                android:layout_height="26dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/plvec_route_corner_bg_sel"
                android:gravity="center"
                android:text="线路3"
                android:textColor="@color/plvec_route_fg"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/plvec_playback_more_dialog_close_iv"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/more_ly"
        android:layout_marginRight="6dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/plvec_popup_close" />
</RelativeLayout>