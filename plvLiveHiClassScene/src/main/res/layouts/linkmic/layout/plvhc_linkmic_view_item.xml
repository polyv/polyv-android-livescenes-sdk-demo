<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/plvhc_linkmic_parent_ly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plvhc_linkmic_ly_parent_shadow_shape"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:layout_height="150dp"
    tools:layout_width="160dp">

    <ImageView
        android:id="@+id/plvhc_linkmic_teacher_place_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerInParent="true"
        android:src="@drawable/plvhc_linkmic_teacher_place_ic"
        android:translationY="-4dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/plvhc_linkmic_teacher_avatar_placeholder_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/plvhc_linkmic_teacher_placeholder_ic"
        android:visibility="gone" />

    <TextView
        android:id="@+id/plvhc_linkmic_teacher_prepare_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="老师准备中"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/plvhc_linkmic_render_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--底部渐变背景-->
    <View
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/plvhc_linkmic_ly_bottom_shadow_shape" />

    <!-- 昵称和icon-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:paddingBottom="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/plvhc_linkmic_mic_state_iv"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="2dp"
            android:src="@drawable/plvhc_linkmic_mic_open" />

        <TextView
            android:id="@+id/plvhc_linkmic_nick_tv"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="4dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textSize="8sp"
            tools:text="你好你好你好你好你好你你好你好你好你好你好你你好你好你好你好你好你好你好你好你好你好好你好你好你好你好你好你好你好你好你好你好你好你好你好你好好你好你好你好你好" />
    </FrameLayout>

    <ImageView
        android:id="@+id/plvhc_linkmic_has_paint_iv"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/plvhc_linkmic_has_paint" />

    <LinearLayout
        android:id="@+id/plvhc_linkmic_cup_ly"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/plvhc_linkmic_has_paint_iv"
        android:background="@drawable/plvhc_linkmic_cup_ly_shadow_shape"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center"
        android:minWidth="24dp"
        android:orientation="horizontal"
        android:paddingLeft="3dp"
        android:paddingRight="4dp">

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/plvhc_linkmic_cup" />

        <TextView
            android:id="@+id/plvhc_linkmic_cup_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:includeFontPadding="true"
            android:singleLine="true"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="8sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/plvhc_linkmic_hands_up_iv"
        android:layout_width="22dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="14dp"
        android:src="@drawable/plvhc_linkmic_hands_up" />
</RelativeLayout>