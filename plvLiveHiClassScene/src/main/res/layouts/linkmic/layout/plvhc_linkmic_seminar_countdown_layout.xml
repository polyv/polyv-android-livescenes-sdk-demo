<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.plv.livecommon.ui.widget.roundview.PLVRoundRectLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2B2F48"
        android:minWidth="282dp"
        android:paddingLeft="12dp"
        android:paddingTop="31dp"
        android:paddingRight="12dp"
        android:paddingBottom="31dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:radius="16dp"
        tools:visibility="visible">

        <TextView
            android:id="@+id/plvhc_linkmic_seminar_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="老师正在邀请你上台"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/plvhc_linkmic_message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/plvhc_linkmic_seminar_title_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:background="@drawable/plvhc_live_room_student_start_class_stroke_bg"
            android:paddingLeft="34dp"
            android:paddingTop="11dp"
            android:paddingRight="34dp"
            android:paddingBottom="11dp"
            android:text="好的 (5s)"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </com.plv.livecommon.ui.widget.roundview.PLVRoundRectLayout>

</android.support.constraint.ConstraintLayout>