<?xml version="1.0" encoding="utf-8"?><!--使用include的id find，不然为null-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="138dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:background="@drawable/plvhc_chatroom_emoji_ly_bg_shape"
        android:clickable="true"
        android:padding="8dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/plvhc_chatroom_emoji_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/plvhc_chatroom_delete_msg_iv"
            android:scrollbarSize="2dp"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarThumbVertical="@drawable/plvhc_chatroom_indicator_bar_view_shape"
            android:scrollbars="vertical" />

        <ImageView
            android:id="@+id/plvhc_chatroom_delete_msg_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/plvhc_chatroom_emoji_iv_press_selector"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/plvhc_chatroom_delete_emoji" />

        <TextView
            android:id="@+id/plvhc_chatroom_send_msg_tv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/plvhc_chatroom_delete_msg_iv"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:background="@drawable/plvhc_chatroom_emoji_send_iv_press_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="发送"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginLeft="18dp"
        android:background="@drawable/plvhc_chatroom_emoji_ly_inverted_triangle_layer" />
</LinearLayout>