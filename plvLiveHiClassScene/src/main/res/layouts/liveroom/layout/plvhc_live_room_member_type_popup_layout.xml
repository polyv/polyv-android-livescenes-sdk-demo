<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/plvhc_member_list_type_ly_shape"
    android:clipChildren="false"
    android:gravity="center_horizontal"
    android:minWidth="142dp"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/plvhc_member_online_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/plvhc_member_list_type_tv_selector"
        android:gravity="center|left"
        android:paddingLeft="8dp"
        android:singleLine="true"
        android:text="在线学生 ( 0 )"
        android:textAllCaps="false"
        android:textColor="#ffffffff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/plvhc_member_kick_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/plvhc_member_list_type_tv_selector"
        android:gravity="center|left"
        android:paddingLeft="8dp"
        android:singleLine="true"
        android:text="移出学生 ( 0 )"
        android:textColor="#ffffffff"
        android:textSize="14sp" />
</LinearLayout>