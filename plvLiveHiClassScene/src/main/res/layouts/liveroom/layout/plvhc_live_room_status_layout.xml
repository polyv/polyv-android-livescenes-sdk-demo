<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="24dp"
    android:background="#191A22">

    <LinearLayout
        android:id="@+id/plvhc_status_lesson_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/plvhc_status_lesson_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B3FFFFFF"
            android:textSize="12dp"
            tools:text="课节号 123456" />

        <View
            android:layout_width="1dp"
            android:layout_height="11dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="#52FFFFFF" />

        <TextView
            android:id="@+id/plvhc_status_lesson_class_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未上课"
            android:textColor="#CCFFFFFF"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/plvhc_status_lesson_network_speed_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/plvhc_status_lesson_network_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/plvhc_network_signal_3" />

        <TextView
            android:id="@+id/plvhc_status_lesson_latency_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:singleLine="true"
            android:text="0ms"
            android:textColor="#ADADC0"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/plvhc_status_lesson_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#CCFFFFFF"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:maxLength="12"
        tools:text="课节名称超长显示省略号..." />

</android.support.constraint.ConstraintLayout>