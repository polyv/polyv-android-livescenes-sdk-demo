<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#BF000000"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/plvhc_live_room_student_cup_gain_main_layout"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/plvhc_live_room_student_cup_gain_light_bg_iv"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/plvhc_live_room_student_light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/plvhc_live_room_student_cup_gain_name_bg_iv"
            android:layout_width="147dp"
            android:layout_height="36dp"
            android:src="@drawable/plvhc_live_room_student_cup_gain_name_bg"
            android:layout_marginTop="181dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/plvhc_live_room_student_cup_gain_cup_iv"
            android:layout_width="186dp"
            android:layout_height="186dp"
            android:src="@drawable/plvhc_live_room_student_cup"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/plvhc_live_room_student_cup_gain_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学生名称"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:singleLine="true"
            app:layout_constraintTop_toTopOf="@id/plvhc_live_room_student_cup_gain_name_bg_iv"
            app:layout_constraintBottom_toBottomOf="@id/plvhc_live_room_student_cup_gain_name_bg_iv"
            app:layout_constraintLeft_toLeftOf="@id/plvhc_live_room_student_cup_gain_name_bg_iv"
            app:layout_constraintRight_toRightOf="@id/plvhc_live_room_student_cup_gain_name_bg_iv" />

        <TextView
            android:id="@+id/plvhc_live_room_student_cup_gain_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获得老师奖励"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginBottom="11dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/plvhc_live_room_student_cup_lighten_iv"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/plvhc_live_room_student_light2"
        android:rotation="20"
        app:layout_constraintTop_toTopOf="@+id/plvhc_live_room_student_cup_gain_main_layout"
        app:layout_constraintBottom_toBottomOf="@+id/plvhc_live_room_student_cup_gain_main_layout"
        app:layout_constraintLeft_toLeftOf="@+id/plvhc_live_room_student_cup_gain_main_layout"
        app:layout_constraintRight_toRightOf="@+id/plvhc_live_room_student_cup_gain_main_layout" />

</android.support.constraint.ConstraintLayout>