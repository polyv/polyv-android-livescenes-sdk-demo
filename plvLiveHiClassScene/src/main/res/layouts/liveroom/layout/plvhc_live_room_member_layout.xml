<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/plvhc_member_list_top_ly_shape"
        android:clipChildren="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:padding="8dp"
            android:text="学生列表"
            android:textColor="#ffffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/plvhc_member_list_mute_all_audio_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/plvhc_member_list_v_split_view"
            android:padding="8dp"
            android:text="全体禁麦"
            android:textColor="#ff78a7ed"
            android:visibility="invisible"
            android:textSize="12sp" />

        <View
            android:id="@+id/plvhc_member_list_v_split_view"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/plvhc_member_list_close_all_linkmic_tv"
            android:layout_alignBottom="@+id/plvhc_member_list_close_all_linkmic_tv"
            android:layout_marginTop="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp"
            android:visibility="invisible"
            android:layout_toLeftOf="@+id/plvhc_member_list_close_all_linkmic_tv"
            android:background="#14F0F1F5" />

        <TextView
            android:id="@+id/plvhc_member_list_close_all_linkmic_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:padding="8dp"
            android:text="全体下台"
            android:textColor="#ff78a7ed"
            android:textSize="12sp" />

        <View
            android:id="@+id/plvhc_member_list_split_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/plvhc_member_list_mute_all_audio_tv"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="24dp"
            android:background="#14F0F1F5" />

        <LinearLayout
            android:id="@+id/plvhc_member_list_left_ly"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_below="@+id/plvhc_member_list_split_view"
            android:clipChildren="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/plvhc_member_list_data_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="在线学生 ( 0 ) "
                android:textColor="#ffffffff"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/plvhc_member_list_pack_up_iv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:padding="6dp"
                android:src="@drawable/plvhc_member_list_pack_up_selector" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/plvhc_member_list_right_ly"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@+id/plvhc_member_list_split_view"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/plvhc_member_list_left_ly"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/plvhc_member_list_hands_up_tv"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:text="举手(0)"
                android:textColor="#ffffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/plvhc_member_list_linkmic_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text=" 上下台 "
                android:textColor="#ffffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/plvhc_member_list_paint_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="  画笔  "
                android:textColor="#ffffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/plvhc_member_list_mic_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text=" 麦克风 "
                android:textColor="#ffffffff"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/plvhc_member_list_camera_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text=" 摄像头 "
                android:textColor="#ffffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/plvhc_member_list_cups_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="  奖励  "
                android:textColor="#ffffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/plvhc_member_list_ban_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="  禁言  "
                android:textColor="#ffffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/plvhc_member_list_kick_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="  移出  "
                android:textColor="#ffffffff"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/plvhc_member_list_bottom_ly_shape"
        android:paddingBottom="8dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/plvhc_member_list_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="always"
            android:paddingRight="3dp"
            android:scrollbarSize="2dp"
            android:scrollbarThumbVertical="@drawable/plvhc_member_list_indicator_view_shape"
            android:scrollbars="vertical" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/plvhc_member_list_kick_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="always"
            android:paddingRight="3dp"
            android:scrollbarSize="2dp"
            android:scrollbarThumbVertical="@drawable/plvhc_member_list_indicator_view_shape"
            android:scrollbars="vertical"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>