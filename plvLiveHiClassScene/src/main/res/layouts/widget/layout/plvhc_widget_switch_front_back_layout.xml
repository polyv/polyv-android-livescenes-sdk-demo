<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="69dp"
    android:layout_height="22dp"
    android:background="@drawable/plvhc_live_room_setting_switch_ly_shape"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/plvhc_widget_front_tv"
        android:layout_width="38dp"
        android:layout_height="match_parent"
        android:background="@drawable/plvhc_live_room_setting_switch_tv_selector"
        android:gravity="center"
        android:text="前"
        android:textColor="@color/plvhc_live_room_setting_switch_text_selector" />

    <TextView
        android:id="@+id/plvhc_widget_back_tv"
        android:layout_width="38dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@drawable/plvhc_live_room_setting_switch_tv_selector"
        android:gravity="center"
        android:text="后"
        android:textColor="@color/plvhc_live_room_setting_switch_text_selector" />
</FrameLayout>