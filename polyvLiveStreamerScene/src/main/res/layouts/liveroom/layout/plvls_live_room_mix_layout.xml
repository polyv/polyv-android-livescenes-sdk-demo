<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#1B202D">

    <TextView
        android:id="@+id/plvls_mix_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:text="@string/plv_streamer_mix_layout"
        android:textColor="#F0F1F5"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/plvls_mix_title_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="#1AF0F1F5"
        app:layout_constraintTop_toBottomOf="@+id/plvls_mix_title_tv" />

    <TextView
        android:id="@+id/plvls_setting_mix_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/plv_streamer_mix_description"
        android:textColor="#99FFFFFF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plvls_mix_title_separator" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plvls_setting_mix_desc">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.easefun.polyv.livecommon.module.modules.streamer.view.ui.PLVStreamerPreferenceCardView
                android:id="@+id/plvls_setting_mix_speaker_card"
                android:layout_width="158dp"
                android:layout_height="52dp"
                android:layout_marginStart="4dp"
                app:layout_constraintEnd_toStartOf="@+id/plvls_setting_mix_tile_card"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:plv_check_icon_height="16dp"
                app:plv_check_icon_width="14dp"
                app:plv_radius="4dp">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/plv_streamer_mix_speaker_sample"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/plv_streamer_mix_speaker_title"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/plv_streamer_mix_speaker_description"
                        android:textColor="#99FFFFFF"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>

            </com.easefun.polyv.livecommon.module.modules.streamer.view.ui.PLVStreamerPreferenceCardView>

            <com.easefun.polyv.livecommon.module.modules.streamer.view.ui.PLVStreamerPreferenceCardView
                android:id="@+id/plvls_setting_mix_tile_card"
                android:layout_width="158dp"
                android:layout_height="52dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/plvls_setting_mix_speaker_card"
                app:layout_constraintTop_toTopOf="parent"
                app:plv_check_icon_height="16dp"
                app:plv_check_icon_width="14dp"
                app:plv_radius="4dp">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/plv_streamer_mix_tile_sample"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/plv_streamer_mix_tile_title"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/plv_streamer_mix_tile_description"
                        android:textColor="#99FFFFFF"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>

            </com.easefun.polyv.livecommon.module.modules.streamer.view.ui.PLVStreamerPreferenceCardView>

            <com.easefun.polyv.livecommon.module.modules.streamer.view.ui.PLVStreamerPreferenceCardView
                android:id="@+id/plvls_setting_mix_single_card"
                android:layout_width="158dp"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@+id/plvls_setting_mix_speaker_card"
                app:layout_constraintTop_toBottomOf="@+id/plvls_setting_mix_speaker_card"
                app:plv_check_icon_height="16dp"
                app:plv_check_icon_width="14dp"
                app:plv_radius="4dp">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/plv_streamer_mix_single_sample"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/plv_streamer_mix_single_title"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/plv_streamer_mix_single_description"
                        android:textColor="#99FFFFFF"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>

            </com.easefun.polyv.livecommon.module.modules.streamer.view.ui.PLVStreamerPreferenceCardView>

            <com.easefun.polyv.livecommon.module.modules.streamer.view.ui.PLVStreamerPreferenceCardView
                android:id="@+id/plvls_setting_mix_list_right_card"
                android:layout_width="158dp"
                android:layout_height="52dp"
                app:layout_constraintStart_toStartOf="@+id/plvls_setting_mix_tile_card"
                app:layout_constraintTop_toBottomOf="@+id/plvls_setting_mix_tile_card"
                android:layout_marginTop="12dp"
                app:plv_check_icon_height="16dp"
                app:plv_check_icon_width="14dp"
                app:plv_radius="4dp">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/plv_streamer_mix_list_right_sample"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/plv_streamer_mix_list_right_title"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/plv_streamer_mix_list_right_description"
                        android:textColor="#99FFFFFF"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>

            </com.easefun.polyv.livecommon.module.modules.streamer.view.ui.PLVStreamerPreferenceCardView>

            <com.easefun.polyv.livecommon.module.modules.streamer.view.ui.PLVStreamerPreferenceCardView
                android:id="@+id/plvls_setting_mix_list_bottom_card"
                android:layout_width="158dp"
                android:layout_height="52dp"
                app:layout_constraintStart_toStartOf="@+id/plvls_setting_mix_single_card"
                app:layout_constraintTop_toBottomOf="@+id/plvls_setting_mix_single_card"
                android:layout_marginTop="12dp"
                app:plv_check_icon_height="16dp"
                app:plv_check_icon_width="14dp"
                app:plv_radius="4dp">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/plv_streamer_mix_list_bottom_sample"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/plv_streamer_mix_list_bottom_title"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/plv_streamer_mix_list_bottom_description"
                        android:textColor="#99FFFFFF"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>

            </com.easefun.polyv.livecommon.module.modules.streamer.view.ui.PLVStreamerPreferenceCardView>

            <TextView
                android:id="@+id/plvls_setting_mix_background_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:text="@string/plv_streamer_mix_background_setting"
                android:textColor="#99FFFFFF"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/plvls_setting_mix_list_bottom_card" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/plvls_setting_mix_background_title">

                <LinearLayout
                    android:id="@+id/plvls_setting_mix_background_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:showDividers="middle"
                    android:divider="@drawable/plv_linear_layout_divider_space_8dp"
                    android:orientation="horizontal" />

            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>