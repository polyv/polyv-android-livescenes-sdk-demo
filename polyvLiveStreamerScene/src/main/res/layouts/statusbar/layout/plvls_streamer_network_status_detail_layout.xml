<?xml version="1.0" encoding="utf-8"?>
<com.easefun.polyv.livecommon.ui.widget.PLVTriangleIndicateLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="196dp"
    android:layout_height="wrap_content"
    app:indicateColor="#BF1B202D"
    app:rectRadius="8dp"
    app:triangleMargin="34dp"
    app:triangleMarginType="right"
    app:trianglePosition="top">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/plv_streamer_network_delay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络延迟：0ms"
            android:textColor="#F0F1F5"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/plv_streamer_network_packet_loss_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="丢包率：↑0.0% ↓0.0%"
            android:textColor="#F0F1F5"
            android:textSize="14sp" />

    </LinearLayout>

</com.easefun.polyv.livecommon.ui.widget.PLVTriangleIndicateLayout>